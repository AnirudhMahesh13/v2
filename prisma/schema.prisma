generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  TUTOR
  ADMIN
}

enum ReportReason {
  SPAM
  HARASSMENT
  INACCURATE
  OTHER
}

model School {
  id        String   @id @default(uuid())
  name      String
  domain    String   @unique // e.g., "carleton.ca"
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      User[]
  courses    Course[]
  professors Professor[]
  clubs      Club[]
  beacons    Beacon[]
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  
  // App specific
  schoolId      String?
  school        School?         @relation(fields: [schoolId], references: [id])
  reviews       Review[]
  tutorListings TutorListing[]
  bookings      Booking[]       @relation("StudentBookings")
  threads       Thread[]
  comments      Comment[]
  itemReports   Report[]        @relation("Reporter")

  // Social Immersion
  karma             Int       @default(0)
  bio               String?
  badges            Badge[]
  enrolledCourseIds String[]  // Simple array of IDs for now
  lastActive        DateTime? // For Presence Pulse
  
  // Settings & Preferences
  notificationPrefs Json?
  privacySettings   Json?
  blockedUserIds    String[] @default([])
  
  followedBy    Follow[]  @relation("UserFollowedBy")
  following     Follow[]  @relation("UserFollows")
  
  resources     Resource[]
  upvotes       Upvote[]
  
  squadMessages SquadMessage[]
  bounties      Bounty[]

  // Friendship Relations
  sentFriendRequests     Friendship[] @relation("FriendshipRequester")
  receivedFriendRequests Friendship[] @relation("FriendshipAddressee")

  // Messaging Relations
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  
  posts            Post[]
  engagements      Engagement[]

  // Clubs Relations
  clubMemberships  ClubMember[]
  clubApplications ClubApplication[]
  eventRSVPs       EventRSVP[]
  clubAnnouncements ClubAnnouncement[]

  // Beacons
  hostedBeacons     Beacon[]
  joinedBeacons     BeaconJoin[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

model Course {
  id        String   @id @default(uuid())
  code      String   // e.g. "COMP1405"
  name      String
  schoolId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  school        School         @relation(fields: [schoolId], references: [id])
  reviews       Review[]
  tutorListings TutorListing[]
  threads       Thread[]
  professors    Professor[]
  resources     Resource[]
  squad         Squad?
  bounties      Bounty[]
  posts         Post[]
  beacons       Beacon[]
}

model Professor {
  id        String   @id @default(uuid())
  name      String
  department String
  schoolId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  school  School   @relation(fields: [schoolId], references: [id])
  reviews Review[]
  threads Thread[]
  courses Course[]
}

model Review {
  id        String   @id @default(uuid())
  body      String?
  rating    Int      // Overall rating 1-5
  
  // Specific metrics (nullable depending on target)
  difficulty Int?    // For Courses
  workload   Int?    // For Courses
  clarity    Int?    // For Professors
  fairness   Int?    // For Professors
  effectiveness Int? // For Tutors

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  courseId  String?
  course    Course?  @relation(fields: [courseId], references: [id])

  professorId String?
  professor   Professor? @relation(fields: [professorId], references: [id])

  tutorListingId String?
  tutorListing   TutorListing? @relation(fields: [tutorListingId], references: [id])

  // Moderation
  isVisible   Boolean  @default(true)
  reportCount Int      @default(0)
  reports     Report[]

  // Social
  images      String[]
  upvotes     Upvote[]

  createdAt DateTime @default(now())
}

model TutorListing {
  id               String   @id @default(uuid())
  description      String
  hourlyRate       Int      // in cents
  courseId         String
  tutorId          String
  
  // Verification & Trust
  isVerified       Boolean  @default(false)
  gradeEvidenceUrl String?
  trustScore       Float    @default(0.0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course   Course    @relation(fields: [courseId], references: [id])
  tutor    User      @relation(fields: [tutorId], references: [id])
  bookings Booking[]
  reviews  Review[]
}

model Booking {
  id             String   @id @default(uuid())
  tutorListingId String
  studentId      String
  stripeSessionId String?
  status         String   @default("PENDING") // PENDING, CONFIRMED, CANCELLED
  scheduledAt    DateTime
  createdAt      DateTime @default(now())

  tutorListing TutorListing @relation(fields: [tutorListingId], references: [id])
  student      User         @relation("StudentBookings", fields: [studentId], references: [id])
}

model Thread {
  id        String   @id @default(uuid())
  title     String
  body      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  courseId    String?
  course      Course?    @relation(fields: [courseId], references: [id])
  
  professorId String?
  professor   Professor? @relation(fields: [professorId], references: [id])

  comments Comment[]

  // Moderation
  isVisible   Boolean  @default(true)
  reportCount Int      @default(0)
  reports     Report[]

  clubAnnouncement ClubAnnouncement?
}

model Comment {
  id        String   @id @default(uuid())
  body      String
  threadId  String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  thread Thread @relation(fields: [threadId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
  
  upvotes Upvote[]
}

model Report {
  id        String       @id @default(uuid())
  reason    ReportReason
  details   String?
  
  reporterId String
  reporter   User @relation("Reporter", fields: [reporterId], references: [id])

  // Targets (only one should be set)
  reviewId String?
  review   Review? @relation(fields: [reviewId], references: [id])

  threadId String?
  thread   Thread? @relation(fields: [threadId], references: [id])

  createdAt DateTime @default(now())
}

// SOCIAL IMMERSION MODELS

model Follow {
  followerId String
  followingId String
  createdAt DateTime @default(now())

  follower User @relation("UserFollows", fields: [followerId], references: [id])
  following User @relation("UserFollowedBy", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model Badge {
  id String @id @default(uuid())
  name String 
  description String
  icon String // Lucide icon name or URL
  userId String
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Resource {
  id String @id @default(uuid())
  title String
  description String?
  url String // Supabase Storage URL
  fileType String // e.g. 'PDF', 'IMG'
  
  courseId String
  course Course @relation(fields: [courseId], references: [id])
  
  userId String
  user User @relation(fields: [userId], references: [id])

  upvotes Upvote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Upvote {
  id String @id @default(uuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  
  // Polymorphic-ish
  resourceId String?
  resource Resource? @relation(fields: [resourceId], references: [id])
  
  reviewId String?
  review Review? @relation(fields: [reviewId], references: [id])
  
  commentId String?
  comment Comment? @relation(fields: [commentId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, resourceId])
  @@unique([userId, reviewId])
  @@unique([userId, commentId])
}


// SQUADS & COLLABORATION

model Squad {
  id        String   @id @default(uuid())
  courseId  String   @unique // One squad per course
  course    Course   @relation(fields: [courseId], references: [id])
  
  messages  SquadMessage[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SquadMessage {
  id        String   @id @default(uuid())
  content   String
  
  squadId   String
  squad     Squad    @relation(fields: [squadId], references: [id])
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
}

model Bounty {
  id          String   @id @default(uuid())
  title       String
  description String?
  reward      Int      // Karma offered
  
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id])
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  isFulfilled Boolean  @default(false)
  
  createdAt   DateTime @default(now())
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model Friendship {
  id          String           @id @default(uuid())
  requesterId String
  requester   User             @relation("FriendshipRequester", fields: [requesterId], references: [id])
  addresseeId String
  addressee   User             @relation("FriendshipAddressee", fields: [addresseeId], references: [id])
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@unique([requesterId, addresseeId])
}

model Message {
  id         String   @id @default(uuid())
  content    String
  senderId   String
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])
  receiverId String
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
}

// REELS & FEED
enum PostMediaType {
  IMAGE
  VIDEO
}

model Post {
  id            String        @id @default(uuid())
  caption       String?
  mediaUrl      String
  thumbnailUrl  String?
  aspectRatio   Float         @default(0.5625) // 9:16
  mediaType     PostMediaType @default(VIDEO)
  vibeTag       String?       // "Academic Grind", "Campus Life"

  userId        String
  user          User          @relation(fields: [userId], references: [id])

  courseId      String?
  course        Course?       @relation(fields: [courseId], references: [id])

  clubId        String?
  club          Club?         @relation(fields: [clubId], references: [id])

  engagements   Engagement[]
  
  // Metrics
  likeCount     Int           @default(0)
  viewCount     Int           @default(0)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum EngagementType {
  LIKE
  VIEW
  SHARE
}

model Engagement {
  id        String         @id @default(uuid())
  type      EngagementType
  
  // For Analytics
  watchTime Int?           // in seconds
  
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  
  postId    String
  post      Post           @relation(fields: [postId], references: [id])

  createdAt DateTime       @default(now())

  @@unique([userId, postId, type]) // One like/view per user per post (simplification)
}

// CLUBS ECOSYSTEM

enum ClubCategory {
  ACADEMIC
  CULTURAL
  HOBBY
  PROFESSIONAL
  SPORTS
  OTHER
}

enum ClubRole {
  PRESIDENT
  VP
  EXECUTIVE
  MEMBER
}

enum ApplicationStatus {
  APPLIED
  INTERVIEWING
  OFFERED
  ACCEPTED
  REJECTED
}

enum OpportunityType {
  VOLUNTEER
  PAID
  ROLE
}

model Club {
  id          String       @id @default(uuid())
  name        String
  slug        String       @unique
  description String
  logoUrl     String?
  coverUrl    String?
  category    ClubCategory @default(OTHER)
  
  schoolId    String
  school      School       @relation(fields: [schoolId], references: [id])
  
  members       ClubMember[]
  events        ClubEvent[]
  announcements ClubAnnouncement[]
  applications  ClubApplication[]
  opportunities ClubOpportunity[]
  
  // A club can have posts (media feed)
  posts         Post[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ClubMember {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  clubId    String
  club      Club     @relation(fields: [clubId], references: [id])
  
  role      ClubRole @default(MEMBER)
  joinedAt  DateTime @default(now())

  @@unique([userId, clubId])
}

model ClubEvent {
  id          String   @id @default(uuid())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime?
  location    String?
  imageUrl    String?
  
  clubId      String
  club        Club     @relation(fields: [clubId], references: [id])
  
  // RSVPs
  rsvps       EventRSVP[]

  createdAt   DateTime @default(now())
}

model EventRSVP {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  eventId   String
  event     ClubEvent @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, eventId])
}

model ClubAnnouncement {
  id        String   @id @default(uuid())
  title     String
  body      String
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  
  clubId    String
  club      Club     @relation(fields: [clubId], references: [id])

  // Linked Discussion Thread
  threadId  String?  @unique
  thread    Thread?  @relation(fields: [threadId], references: [id])

  createdAt DateTime @default(now())
}

model ClubApplication {
  id        String            @id @default(uuid())
  position  String
  status    ApplicationStatus @default(APPLIED)
  answers   Json?             // Questionnaire responses
  
  userId    String
  user      User              @relation(fields: [userId], references: [id])
  
  clubId    String
  club      Club              @relation(fields: [clubId], references: [id])

  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model ClubOpportunity {
  id          String          @id @default(uuid())
  title       String
  description String
  type        OpportunityType @default(VOLUNTEER)
  
  clubId      String
  club        Club            @relation(fields: [clubId], references: [id])
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// BEACONS (Study Meetups)

enum BeaconVibe {
  QUIET
  COLLABORATIVE
  INTENSE
}

model Beacon {
  id           String      @id @default(uuid())
  locationName String
  goal         String
  vibe         BeaconVibe  @default(COLLABORATIVE)
  
  expiresAt    DateTime
  
  description  String?      // Optional details "Hertzberg 201, back table"

  userId       String
  user         User        @relation(fields: [userId], references: [id])
  
  courseId     String?
  course       Course?     @relation(fields: [courseId], references: [id])
  
  schoolId     String
  school       School      @relation(fields: [schoolId], references: [id])

  // Joiners
  attendees    BeaconJoin[]
  
  createdAt    DateTime    @default(now())
}

model BeaconJoin {
  id        String   @id @default(uuid())
  
  beaconId  String
  beacon    Beacon   @relation(fields: [beaconId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  joinedAt  DateTime @default(now())

  @@unique([beaconId, userId])
}
